<div class="details">
  <a href="/movies">Go back</a><br />
  <img src="{{movie.image}}" /><br />
  <h2>{{movie.title}}</h2>
  <hr />
  <h3>Director: {{movie.director}}</h3>
  <h3>Stars</h3>
  <ul>
    {{#each movie.stars}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
  <p>{{movie.description}}</p>
  {{#each movie.showtimes}}
    {{this}}
    |
  {{/each}}
  <hr />
</div>